pipeline {
 agent none
        string(name: 'BRANCH', description: 'Enter the branch to build', defaultValue: 'main')
        string(name: 'GIT_REPO', description: 'Enter the repo url', defaultValue:'https://github.com/mani017/Jenkinsfile.git')
        choice(name: 'STAGE', choices: ['build','deploy'], description: 'Stages to build')
    }

    stages {
        stage('Build') {
            agent any
            steps {
			      script{
			   if(params.STAGE == 'build')
                {
                    git branch: params.BRANCH, url: params.GIT_REPO
                    sh '''
                        #!/bin/bash 
                        pwd 
                        ls
                        echo "This is a BUILD stage"
                      
                   ''' 
                }else {
				echo "skipping the BUILD stage"
				}  				
            }
        }
stage('DEPLOY') {
            agent { label 'master' } 
            steps {
               
				script{
                if(params.STAGE == 'deploy')
                {
                    echo "This is a DEPLOY stage"
                    sh 'sleep 5'
                    echo "${params.BRANCH}"
                    echo "${params.GIT_REPO}"
				} else {
				echo "skipping DEPLOY stage"
				}
                }    
            }
        }
    }
    }    
